<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:textDirection="rtl">


            <EditText
                android:id="@+id/editText100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_username"
                android:ems="10"
                android:hint="اسم المستخدم"
                android:inputType="textEmailAddress|textPersonName|textAutoComplete"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />


            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_username"
                android:ems="10"
                android:hint="الطول"
                android:inputType="textAutoComplete|number"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_username"
                android:ems="10"
                android:hint="العمر"
                android:inputType="textAutoComplete|number"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />


            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_username"
                android:ems="10"
                android:hint="الوزن"
                android:inputType="textAutoComplete|number"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />


            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_username"
                android:ems="10"
                android:hint="الجنس"
                android:inputType="text|textAutoComplete"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_password"
                android:ems="10"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/ic_password"
                android:ems="10"
                android:hint="تأكيد كلمة المرور"
                android:inputType="textPassword"
                android:layoutDirection="rtl"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textColorHint="#355C7D"
                android:textDirection="rtl" />


            <Button
                android:id="@+id/button_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/gradient_buttons"
                android:ems="10"
                android:layoutDirection="rtl"
                android:onClick="clicksigninbut"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="التسجيل في البرنامج"
                android:textColor="#fff"
                android:textDirection="rtl" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clicksignin"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
