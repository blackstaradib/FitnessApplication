<resources>

    <!-- Base application theme. -->

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />


    <style name="spinner_activity_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">233dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:popupBackground">@drawable/gradient</item>
        <item name="android:dropDownHeight">70dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/white</item>
    </style>


    <style name="spinnerItemStyle" parent="android:Widget.Material.Light.TextView.SpinnerItem"></style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>



